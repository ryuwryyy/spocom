<h5 class="heading">編集画面</h5>

<div class="container">
  <%= form_error_messages(@user) %>

  <%= form_with(model: @user, url:  line_user_path(@user), local: true) do |form| %>

    <div class="form-group row">
      <div class="col-3">
        <%= form.label :name %>
      </div>
      <div class="offset-2 col-10">
        <%= form.label :last_name %><%= form.text_field :last_name, class:"form-control"%>
        <%= form.label :first_name %><%= form.text_field :first_name, class:"form-control"%>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3">
        <%= form.label :kana_name %>
      </div>
      <div class="offset-2 col-10">
        <%= form.label :kana_last_name %><%= form.text_field :kana_last_name, class:"form-control" %>
        <%= form.label :kana_first_name %><%= form.text_field :kana_first_name, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :team_id %>
      <%= form.collection_select :team_id, Team.all, :id, :name, {:prompt => "選択してください"},{class:"form-control"} %>
    </div>

    <div class="form-group">
      <%= form.label :image %><br>
      <%= form.file_field :image, direct_upload: true, class:"form-control-file" %><br>
    </div>

    <div class="form-group text-center">
      <%= form.submit("変更", class: "btn-primary btn-lg") %>
    </div>

  <% end %>
  <br>
</div>