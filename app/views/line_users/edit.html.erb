<h5 class="heading">編集画面</h5>
<div class="container">
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with(model: @user, url:  line_user_path(@user), local: true) do |form| %>
    <div class="form-group row">
      <div class="col-3">
        <label>名前</label>
      </div>
      <div class="offset-2 col-10">
        <%= form.label :姓　 %>:<%= form.text_field :last_name, class:"form-control"%>
        <%= form.label :名　 %>:<%= form.text_field :first_name, class:"form-control"%>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3">
        <label>ナマエ</label>
      </div>
      <div class="offset-2 col-10">
        <%= form.label :セイ %> :<%= form.text_field :kana_last_name, class:"form-control" %>
        <%= form.label :メイ %> :<%= form.text_field :kana_first_name, class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :表示名 %>
      <%= form.text_field :display_name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :メールアドレス %>
      <%= form.text_field :email, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :所属チーム名 %>
      <%= form.collection_select :team_id, Team.all, :id, :name, {:prompt => "選択してください"},{class:"form-control"} %>
    </div>
    <div class="form-group text-center">
      <%= form.submit("変更", class: "btn-primary btn-lg") %>
    </div>
  <% end %>
</div>