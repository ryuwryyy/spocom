<h4 class="before-login-heading">会員登録</h4>

<div class="container">
  <%= form_error_messages(@new_user) %>
  
  <%= form_with(model: @new_user, url: line_users_path(line: @omniauth), local: true) do |form| %>

    <div class="form-group row">
      <div class="col-3">
        <%= form.label :name %>
      </div>
      <div class="offset-2 col-10">
        <%= form.label :last_name %><%= form.text_field :last_name, class:"form-control"%>
        <%= form.label :first_name %><%= form.text_field :first_name, class:"form-control"%>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3">
        <%= form.label :kana_name %>
      </div>
      <div class="offset-2 col-10">
        <%= form.label :kana_last_name %><%= form.text_field :kana_last_name, class:"form-control" %>
        <%= form.label :kana_first_name %><%= form.text_field :kana_first_name, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :display_name %>
      <%= form.text_field :display_name, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :team_id %>
      <%= form.collection_select :team_id, Team.all, :id, :name, {:prompt => "選択してください"},{class:"form-control"} %>
    </div>

    <div class="form-group">
      <%= form.label :image %><br>
      <%= form.file_field :image, direct_upload: true, class:"form-control-file" %><br>
    </div>

    <div class="form-group form-check">
      <%= form.check_box :agreement, :as => :boolean, checked:false %>
      <label class="form-check-label" for="user_agreement">
        利用規約とプライバシーポリシーに同意する
      </label>
    </div>

    <div class="form-group text-center">
      <%= form.submit("登録", class: "btn-primary btn-lg") %>
    </div>

  <% end %>
  <br>
</div>
